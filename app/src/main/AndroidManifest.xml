<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.projetoagenda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.android.projetoagenda.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.projetoagenda.cadastro.CadastroAtividade" />
        <activity
            android:name="com.android.projetoagenda.activity.MinhasAtividades"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.android.projetoagenda.login.LoginActivity"/>
        <activity
            android:name="com.android.projetoagenda.editar.EditarAtividade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.projetoagenda.activity.AtividadesConvidado"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.android.projetoagenda.login.LoginActivity"></activity>
        <activity android:name="com.android.projetoagenda.editar.EditarAtividadeConvidado"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.android.projetoagenda.activity.Atividades"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.android.projetoagenda.login.LoginActivity"></activity>
    </application>

</manifest>